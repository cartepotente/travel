<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Hotel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.hotel %></td>
        <td><%= link_to 'Show', room , class: 'btn btn-success'%></td>
        <td><%= link_to 'Edit', edit_room_path(room), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  new_room_path, class: 'btn btn-default' do %>
  <i class="glyphicon glyphicon-plus"></i> Nuevo Room
<% end %>
